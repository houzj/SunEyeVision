<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <PlatformTarget>x64</PlatformTarget>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>SamplePlugin</RootNamespace>
    <AssemblyName>SamplePlugin</AssemblyName>
    
    <!-- 插件元数据 -->
    <PluginId>SamplePlugin</PluginId>
    <PluginName>示例插件</PluginName>
    <PluginVersion>1.0.0</PluginVersion>
    <PluginDescription>用于演示插件开发流程的示例插件</PluginDescription>
    <PluginAuthor>SunEyeVision Team</PluginAuthor>
  </PropertyGroup>

  <!-- 引用 SDK - 使用项目引用（内部开发模式） -->
  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Plugin.SDK\SunEyeVision.Plugin.SDK.csproj" />
  </ItemGroup>
</Project>

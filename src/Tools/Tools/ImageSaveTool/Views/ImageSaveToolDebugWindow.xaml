<Window x:Class="SunEyeVision.Tools.ImageSaveTool.Views.ImageSaveToolDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SunEyeVision.Tools.ImageSaveTool"
        mc:Ignorable="d"
        Title="图像保存 - 调试窗口" Height="500" Width="800"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="16">

            <!-- 文件路径 -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="文件路径:" VerticalAlignment="Center" FontSize="12" Foreground="#333333" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                         Padding="6" FontSize="12" VerticalContentAlignment="Center"/>
                <Button Grid.Column="2" Content="浏览..." Padding="8,4"
                        Command="{Binding BrowseFilePathCommand}" Margin="8,0,0,0"/>
            </Grid>

            <!-- 图像格式 -->
            <TextBlock Text="图像格式:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding ImageFormats}"
                      SelectedItem="{Binding ImageFormat}" Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,12"/>

            <!-- 图像质量 -->
            <TextBlock Text="图像质量:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <Slider Value="{Binding ImageQuality}" Minimum="1" Maximum="100"
                    VerticalAlignment="Center" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,12"/>
            <TextBlock Text="{Binding ImageQuality}" FontSize="12" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,12"/>

            <!-- 覆盖已有文件 -->
            <CheckBox IsChecked="{Binding OverwriteExisting}"
                     VerticalAlignment="Center" Content="覆盖已有文件" FontSize="12" Margin="0,0,0,12"/>
        </StackPanel></Window>

<UserControl x:Class="SunEyeVision.UI.Controls.ParameterBinding.DataSourcePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SunEyeVision.UI.ViewModels"
             xmlns:params="clr-namespace:SunEyeVision.Plugin.SDK.Execution.Parameters;assembly=SunEyeVision.Plugin.SDK"
             xmlns:visibility="clr-namespace:SunEyeVision.UI.Converters.Visibility"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=vm:DataSourcePickerViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <visibility:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <!-- 分组标题样式 -->
        <Style x:Key="GroupHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <!-- 数据源项样式 -->
        <Style x:Key="DataSourceItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 选中数据源预览样式 -->
        <Style x:Key="PreviewBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <!-- 搜索框样式 -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- 状态指示器样式 -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ExecutionStatus}" Value="Success">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ExecutionStatus}" Value="Failed">
                    <Setter Property="Background" Value="#F44336"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ExecutionStatus}" Value="Running">
                    <Setter Property="Background" Value="#FF9800"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ExecutionStatus}" Value="NotExecuted">
                    <Setter Property="Background" Value="#9E9E9E"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#1976D2" Padding="12,8">
            <StackPanel>
                <TextBlock Text="选择数据源" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock Text="{Binding ParameterName, StringFormat='参数: {0}'}" FontSize="11" Foreground="#B3E5FC" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 搜索栏 -->
        <Border Grid.Row="1" Padding="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchTextBoxStyle}"
                         ToolTip="搜索节点名称、属性名称或描述"/>
                
                <Button Grid.Column="1" 
                        Content="刷新" 
                        Margin="8,0,0,0"
                        Padding="12,0"
                        Command="{Binding RefreshCommand}"/>
            </Grid>
        </Border>
        
        <!-- 类型过滤提示 -->
        <Border Grid.Row="2" 
                Padding="8,4" 
                Background="#FFF3E0"
                Visibility="{Binding ShowTypeFilterHint, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="{Binding TypeFilterHint}" FontSize="11" Foreground="#E65100"/>
        </Border>
        
        <!-- 数据源列表 -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:DataSourceGroupViewModel}">
                        <!-- 分组 -->
                        <Expander IsExpanded="{Binding IsExpanded}" BorderThickness="0">
                            <Expander.Header>
                                <Border Style="{StaticResource GroupHeaderStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- 执行状态指示器 -->
                                        <Border Style="{StaticResource StatusIndicatorStyle}"/>
                                        
                                        <!-- 节点名称和类型 -->
                                        <TextBlock Text="{Binding GroupName}" FontWeight="Medium" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding NodeType, StringFormat='({0})'}" 
                                                   FontSize="10" 
                                                   Foreground="Gray" 
                                                   Margin="0,0,8,0"/>
                                        
                                        <!-- 数据源数量 -->
                                        <TextBlock Text="{Binding Count, StringFormat='[{0} 个属性]'}" 
                                                   FontSize="10" 
                                                   Foreground="#1976D2"/>
                                    </StackPanel>
                                </Border>
                            </Expander.Header>
                            
                            <!-- 数据源项列表 -->
                            <ItemsControl ItemsSource="{Binding DataSources}" Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type params:AvailableDataSource}">
                                        <Border Style="{StaticResource DataSourceItemStyle}"
                                                MouseLeftButtonDown="OnDataSourceClick">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <!-- 属性名称 -->
                                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Medium"/>
                                                    
                                                    <!-- 属性类型和值 -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding TypeName}" 
                                                                   FontSize="10" 
                                                                   Foreground="Gray" 
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding ValueString, StringFormat='= {0}'}" 
                                                                   FontSize="10" 
                                                                   Foreground="#4CAF50"
                                                                   MaxWidth="150"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    
                                                    <!-- 描述 -->
                                                    <TextBlock Text="{Binding Description}" 
                                                               FontSize="10" 
                                                               Foreground="Gray" 
                                                               TextWrapping="Wrap"
                                                               Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}"/>
                                                </StackPanel>
                                                
                                                <!-- 兼容性标识 -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="兼容" 
                                                           FontSize="10" 
                                                           Foreground="#4CAF50"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding IsCompatible, Converter={StaticResource BoolToVisibility}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- 底部操作栏 -->
        <Border Grid.Row="4" Padding="8" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 选择预览 -->
                <Border Grid.Column="0" 
                        Style="{StaticResource PreviewBorderStyle}"
                        Visibility="{Binding HasSelection, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding SelectionPreview}" 
                               FontSize="11" 
                               TextWrapping="Wrap"/>
                </Border>
                
                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="清除" 
                            Width="60" 
                            Margin="0,0,8,0"
                            Command="{Binding ClearSelectionCommand}"
                            Visibility="{Binding HasSelection, Converter={StaticResource BoolToVisibility}}"/>
                    <Button Content="取消" 
                            Width="60" 
                            Margin="0,0,8,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="确定" 
                            Width="60" 
                            Style="{StaticResource AccentButtonStyle}"
                            Command="{Binding ConfirmCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 加载状态覆盖层 -->
        <Grid Grid.Row="0" Grid.RowSpan="5" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="加载中..." Foreground="White" FontSize="14"/>
                <ProgressBar Width="100" Height="4" Margin="0,8,0,0" IsIndeterminate="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

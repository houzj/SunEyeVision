<UserControl x:Class="SunEyeVision.UI.Controls.ParameterBinding.ImageParameterBindingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SunEyeVision.UI.ViewModels"
             xmlns:visibility="clr-namespace:SunEyeVision.UI.Converters.Visibility"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="320">

    <UserControl.Resources>
        <!-- 转换器 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <visibility:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- 绑定类型指示器样式 -->
        <Style x:Key="BindingTypeIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="4"/>
            <Setter Property="Margin" Value="0,2,8,2"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedBindingType}" Value="Constant">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedBindingType}" Value="DynamicBinding">
                    <Setter Property="Background" Value="#2196F3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 参数名称样式 -->
        <Style x:Key="ParameterNameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- 下拉框样式 -->
        <Style x:Key="ImageComboBoxStyle" TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <!-- 缩略图边框样式 -->
        <Style x:Key="ThumbnailBorderStyle" TargetType="Border">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- 加载指示器样式 -->
        <Style x:Key="LoadingIndicatorStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题行 -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 绑定类型指示器 -->
                <Border Grid.Column="0" Style="{StaticResource BindingTypeIndicatorStyle}"/>

                <!-- 参数名称和类型 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" Style="{StaticResource ParameterNameStyle}"/>
                    <TextBlock Text="{Binding TypeName, StringFormat=' ({0})'}" 
                               FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>

                <!-- 数据源数量提示 -->
                <TextBlock Grid.Column="2" 
                           Text="{Binding AvailableImageCount, StringFormat='({0}个可用)'}"
                           FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,8,0"/>

                <!-- 刷新按钮 -->
                <Button Grid.Column="3" Content="刷新" Padding="8,2" FontSize="11" 
                        Command="{Binding RefreshCommand}"/>
            </Grid>

            <!-- 绑定模式切换 -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="绑定类型:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Content="动态绑定" 
                                 IsChecked="{Binding IsDynamicMode, Mode=TwoWay}"
                                 GroupName="BindingMode" Margin="0,0,16,0"/>
                    <RadioButton Content="常量值" 
                                 IsChecked="{Binding IsConstantMode, Mode=TwoWay}"
                                 GroupName="BindingMode"/>
                </StackPanel>
            </Grid>

            <!-- 动态绑定区域 -->
            <Grid Grid.Row="2" Visibility="{Binding IsDynamicMode, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 缩略图预览 -->
                <Border Grid.Column="0" Style="{StaticResource ThumbnailBorderStyle}">
                    <Grid>
                        <!-- 加载指示器 -->
                        <TextBlock Text="加载中..." 
                                   Style="{StaticResource LoadingIndicatorStyle}"
                                   Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource BoolToVisibility}}"/>

                        <!-- 缩略图 -->
                        <Image Source="{Binding PreviewThumbnail}" 
                               Stretch="Uniform"
                               Visibility="{Binding PreviewThumbnail, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                </Border>

                <!-- 数据源选择 -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 下拉选择器 -->
                    <ComboBox Grid.Row="0" 
                              Style="{StaticResource ImageComboBoxStyle}"
                              ItemsSource="{Binding ImageDataSources}"
                              SelectedItem="{Binding SelectedImageDataSource}"
                              ToolTip="{Binding SelectionInfo}"
                              Margin="0,0,0,4">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SourceNodeName}" FontWeight="Medium" Margin="0,0,4,0"/>
                                    <TextBlock Text="→" Foreground="Gray" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 选中信息显示 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                Visibility="{Binding HasSelection, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="已选择: " FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedDataSourceDisplay}" FontSize="10" Foreground="#2196F3"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- 验证消息 -->
            <TextBlock Grid.Row="3" 
                       Text="{Binding ValidationMessage}"
                       FontSize="11" Foreground="Red" Margin="0,4,0,0"
                       Visibility="{Binding IsValid, Converter={StaticResource InverseBoolToVisibility}}"/>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="SunEyeVision.UI.Views.Controls.Canvas.NativeDiagramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="5000" d:DesignWidth="5000"
             x:Name="UserControlRoot"
             AllowDrop="True"
             DragEnter="NativeDiagramControl_DragEnter"
             DragOver="NativeDiagramControl_DragOver"
             Drop="NativeDiagramControl_Drop"
             PreviewDrop="NativeDiagramControl_PreviewDrop">
    <Grid Background="#F5F5F5"
          Width="5000"
          Height="5000"
          HorizontalAlignment="Left"
          VerticalAlignment="Top">
        <!-- 原生图表容器 -->
        <ContentControl x:Name="DiagramContainer"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

        <!-- 空状态提示 -->
        <TextBlock x:Name="EmptyStateText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="#999999"
                   Text="拖放节点到此区域以开始构建工作流"
                   Panel.ZIndex="50"
                   IsHitTestVisible="False"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>

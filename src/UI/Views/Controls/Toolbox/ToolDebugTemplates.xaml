<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- å­—ç¬¦ä¸²å‚æ•°æ¨¡æ?-->
    <DataTemplate x:Key="StringParameterTemplate">
        <StackPanel Margin="0,0,0,8">
            <TextBlock Text="{Binding DisplayName}" FontSize="11" Foreground="#666666" Margin="0,0,0,4"/>
            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="6" FontSize="11" BorderBrush="#DDDDDD" BorderThickness="1"/>
        </StackPanel>
    </DataTemplate>

    <!-- æ•´æ•°å‚æ•°æ¨¡æ¿ -->
    <DataTemplate x:Key="IntParameterTemplate">
        <StackPanel Margin="0,0,0,8">
            <TextBlock Text="{Binding DisplayName}" FontSize="11" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                         Width="120" Padding="6" FontSize="11" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Value}" Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}"
                        Width="150" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Value}" FontSize="11" Foreground="#333333" Margin="4,0,0,0" Width="40"/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <!-- æµ®ç‚¹æ•°å‚æ•°æ¨¡æ?-->
    <DataTemplate x:Key="DoubleParameterTemplate">
        <StackPanel Margin="0,0,0,8">
            <TextBlock Text="{Binding DisplayName}" FontSize="11" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Value, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" 
                         Width="120" Padding="6" FontSize="11" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Value}" Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}"
                        Width="150" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Value, StringFormat={}{0:F2}}" FontSize="11" Foreground="#333333" Margin="4,0,0,0" Width="50"/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <!-- æžšä¸¾å‚æ•°æ¨¡æ¿ -->
    <DataTemplate x:Key="EnumParameterTemplate">
        <StackPanel Margin="0,0,0,8">
            <TextBlock Text="{Binding DisplayName}" FontSize="11" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding Options}" SelectedValue="{Binding Value}"
                      Padding="6" FontSize="11" BorderBrush="#DDDDDD" BorderThickness="1"/>
        </StackPanel>
    </DataTemplate>

    <!-- å¸ƒå°”å‚æ•°æ¨¡æ¿ -->
    <DataTemplate x:Key="BoolParameterTemplate">
        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Value}" Content="{Binding DisplayName}" 
                     FontSize="11" VerticalAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>

<UserControl x:Class="SunEyeVision.UI.Views.Controls.Toolbox.ToolboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SunEyeVision.UI.Views.Controls"
             xmlns:converters="clr-namespace:SunEyeVision.UI.Converters"
             xmlns:convertersVisibility="clr-namespace:SunEyeVision.UI.Converters.Visibility"
             xmlns:convertersUI="clr-namespace:SunEyeVision.UI.Converters.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="260">

    <UserControl.Resources>
        <convertersUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <convertersVisibility:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <convertersVisibility:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <convertersVisibility:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <convertersVisibility:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:ExpandIconConverter x:Key="ExpandIconConverter"/>

        <!-- ========== 紧凑模式样式 ========== -->

        <!-- 分类项样式（紧凑模式） -->
        <Style x:Key="CompactCategoryItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#667EEA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 工具项样式（紧凑模式） -->
        <Style x:Key="CompactToolItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#667EEA"/>
                    <Setter Property="BorderBrush" Value="#667EEA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ========== 展开模式样式 ========== -->

        <!-- 分类标题样式（展开模式） -->
        <Style x:Key="ExpandedCategoryHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 工具项样式（展开模式） -->
        <Style x:Key="ExpandedToolItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F8FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 通用工具图标样式 -->
        <Style x:Key="ToolIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- 工具名称样式 -->
        <Style x:Key="ToolNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="180"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <!-- 主容器 - 浅色主题 -->
    <Border Background="#F5F5F5">
        <Grid>
            <!-- ========== 紧凑模式 ========== -->
            <DockPanel Visibility="{Binding IsCompactMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <!-- 左侧分类侧边栏(60px宽) -->
                <Border x:Name="CategorySidebar"
                        DockPanel.Dock="Left" Width="60" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0"
                        MouseLeave="CategorySidebar_MouseLeave">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>  <!-- 上部：分类图标列表 -->
                            <RowDefinition Height="Auto"/>  <!-- 底部：切换按钮 -->
                        </Grid.RowDefinitions>

                        <!-- 上部：分类图标列表 -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                            <ItemsControl x:Name="CategoryItemsControl" ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CompactCategoryItemStyle}"
                                                Tag="{Binding}"
                                                MouseEnter="CategoryItem_MouseEnter">
                                            <Grid>
                                                <TextBlock Text="{Binding Icon}" FontSize="22"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Ellipse Width="6" Height="6" Fill="#FF4444"
                                                         VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                                         Margin="0,0,4,4"
                                                         Visibility="{Binding ToolCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- 底部：切换按钮 -->
                        <Button x:Name="CompactModeToggleBtn"
                                Grid.Row="1"
                                Width="16" Height="16"
                                Margin="0,8,8,16"
                                HorizontalAlignment="Right"
                                Click="ToggleModeButton_Click"
                                ToolTip="{Binding DisplayModeTooltip}"
                                Background="#DDDDDD"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1">
                            <TextBlock Text="{Binding DisplayModeIcon}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
            </DockPanel>

            <!-- Popup 用于紧凑模式下显示工具（移到DockPanel外部，作为Grid的直接子元素） -->
            <Popup x:Name="CompactModePopup"
                   Placement="Right"
                   PopupAnimation="Slide"
                   AllowsTransparency="False"
                   StaysOpen="True"
                   Visibility="{Binding IsCompactMode, Converter={StaticResource BoolToVisibilityConverter}}"
                   PlacementTarget="{Binding ElementName=CategorySidebar}">
                <Border x:Name="CompactModePopupBorder"
                        Background="#FFFFFF"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        MinWidth="340"
                        MaxWidth="500"
                        Padding="16"
                        MouseEnter="CompactModePopupBorder_MouseEnter"
                        MouseLeave="CompactModePopupBorder_MouseLeave">
                    <StackPanel>
                        <!-- 分类标题栏 -->
                        <Border Padding="0,0,0,12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="-16,-16,-16,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding SelectedCategoryIcon}"
                                           FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding SelectedCategory}"
                                           FontSize="14" FontWeight="SemiBold"
                                           Foreground="#333333"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 工具列表（每行3列） -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,12,0,0" MaxHeight="500">
                            <ItemsControl ItemsSource="{Binding SelectedCategoryTools}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CompactToolItemStyle}"
                                                Tag="{Binding}"
                                                PreviewMouseLeftButtonDown="ToolItem_PreviewMouseLeftButtonDown"
                                                Margin="0,0,8,8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Icon}" Style="{StaticResource ToolIconStyle}"/>
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource ToolNameStyle}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- ========== 展开模式（传统工具箱样式，使用水平 WrapPanel） ========== -->
            <DockPanel Visibility="{Binding IsCompactMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <!-- 分类和工具列表 -->
                <Grid DockPanel.Dock="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 分类和工具滚动区域 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <!-- 分类标题 -->
                                        <Border Style="{StaticResource ExpandedCategoryHeaderStyle}"
                                                MouseLeftButtonUp="ExpandCategory_MouseLeftButtonUp"
                                                Tag="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 展开/折叠图标 -->
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding IsExpanded, Converter={StaticResource ExpandIconConverter}}"
                                                           FontSize="12"
                                                           Foreground="#666666"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>

                                                <!-- 分类图标和名称 -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="13"
                                                               FontWeight="SemiBold"
                                                               Foreground="#333333"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- 工具数量 -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding ToolCount, StringFormat='({0})'}"
                                                           FontSize="12"
                                                           Foreground="#999999"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- 工具列表（仅当展开时显示，使用水平 WrapPanel） -->
                                        <ItemsControl ItemsSource="{Binding Tools}"
                                                      Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource CompactToolItemStyle}"
                                                            Tag="{Binding}"
                                                            PreviewMouseLeftButtonDown="ToolItem_PreviewMouseLeftButtonDown">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Icon}" Style="{StaticResource ToolIconStyle}"/>
                                                            <TextBlock Text="{Binding Name}" Style="{StaticResource ToolNameStyle}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 底部：切换按钮 -->
                    <Button x:Name="ExpandedModeToggleBtn"
                            Grid.Row="1"
                            Width="16" Height="16"
                            Margin="0,8,0,16"
                            HorizontalAlignment="Right"
                            Click="ToggleModeButton_Click"
                            ToolTip="{Binding DisplayModeTooltip}"
                            Background="#DDDDDD"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1">
                        <TextBlock Text="{Binding DisplayModeIcon}"
                                   FontSize="12"
                                   Foreground="#666666"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>

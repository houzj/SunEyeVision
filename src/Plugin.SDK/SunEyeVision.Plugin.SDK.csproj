<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWPF>false</UseWPF>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>SunEyeVision.Plugin.SDK</RootNamespace>
    <AssemblyName>SunEyeVision.Plugin.SDK</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\SunEyeVision.Plugin.SDK.xml</DocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>

    <!-- NuGet包配置 -->
    <PackageId>SunEyeVision.Plugin.SDK</PackageId>
    <Version>1.0.2</Version>
    <Authors>SunEyeVision Team</Authors>
    <Company>SunEyeVision</Company>
    <Product>SunEyeVision Plugin SDK</Product>
    <Description>SunEyeVision 插件开发SDK - 零依赖的纯契约层，现代化架构，包含ITool、IToolPlugin等核心接口</Description>
    <Copyright>Copyright (c) 2026 SunEyeVision</Copyright>
    <PackageTags>vision;plugin;sdk;machine-vision;image-processing</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <!-- 包输出配置 -->
    <PackageOutputPath>$(SolutionDir)nupkg\</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- 源码链接支持 -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <!-- 图像处理核心依赖 -->
  <ItemGroup>
    <PackageReference Include="OpenCvSharp4" Version="4.13.0.20260222" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.13.0.20260222" />
  </ItemGroup>
</Project>

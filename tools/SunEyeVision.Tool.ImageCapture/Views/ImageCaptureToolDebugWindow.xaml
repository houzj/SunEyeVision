<Window x:Class="SunEyeVision.Tool.ImageCapture.Views.ImageCaptureToolDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="图像采集工具调试" Height="600" Width="450">
    
    <StackPanel Margin="16">
            <!-- 设备ID -->
            <TextBlock Text="设备ID:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,12">
                <ComboBoxItem Content="默认设备" Tag="0" IsSelected="True"/>
                <ComboBoxItem Content="设备 1" Tag="1"/>
                <ComboBoxItem Content="设备 2" Tag="2"/>
            </ComboBox>

            <!-- 分辨率 -->
            <TextBlock Text="图像分辨率:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <TextBlock Text=" x " Margin="8,0" VerticalAlignment="Center" FontSize="12"/>
                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <ComboBox Width="120" Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" Margin="8,0,0,0">
                    <ComboBoxItem Content="1920x1080"/>
                    <ComboBoxItem Content="1280x720"/>
                    <ComboBoxItem Content="640x480"/>
                </ComboBox>
            </StackPanel>

            <!-- 曝光时间 -->
            <TextBlock Text="曝光时间 (ms):" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding ExposureTime, StringFormat={}{0:F1}}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding ExposureTime}" Minimum="0.1" Maximum="1000" TickFrequency="0.1"
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding ExposureTime, StringFormat={}{0:F1}}" FontSize="12" FontWeight="Bold" 
                           Margin="8,0,0,0" Width="50"/>
            </StackPanel>

            <!-- 增益 -->
            <TextBlock Text="增益:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Gain, StringFormat={}{0:F1}}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Gain}" Minimum="0.0" Maximum="16.0" TickFrequency="0.1"
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Gain, StringFormat={}{0:F1}}" FontSize="12" FontWeight="Bold" 
                           Margin="8,0,0,0" Width="50"/>
            </StackPanel>
        </StackPanel></Window>

<local:BaseToolDebugWindow x:Class="SunEyeVision.PluginSystem.UI.Tools.OCRToolDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SunEyeVision.PluginSystem.UI"
        Title="OCR识别工具调试" Height="500" Width="450">
    
    <local:BaseToolDebugWindow.CustomContent>
        <StackPanel Margin="16">
            <!-- 语言 -->
            <TextBlock Text="识别语言:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding Language}"
                     Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,12"/>

            <!-- 数据路径 -->
            <TextBlock Text="Tessdata路径:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}" Width="300" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Button Content="浏览" Width="60" Margin="8,0,0,0" Padding="6"/>
            </StackPanel>

            <!-- 字符白名单 -->
            <TextBlock Text="字符白名单:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <TextBox Text="{Binding CharWhitelist, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" 
                     Margin="0,0,0,12" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- 页面分割模式 -->
            <TextBlock Text="页面分割模式 (PSM):" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1">
                <ComboBoxItem Content="0: 仅方向和脚本检测" Tag="0"/>
                <ComboBoxItem Content="1: 自动页面分割" Tag="1"/>
                <ComboBoxItem Content="2: 自动OCR" Tag="2"/>
                <ComboBoxItem Content="3: 全自动" Tag="3" IsSelected="True"/>
                <ComboBoxItem Content="4: 单列" Tag="4"/>
                <ComboBoxItem Content="5: 单块垂直文本" Tag="5"/>
                <ComboBoxItem Content="6: 单块文本" Tag="6"/>
                <ComboBoxItem Content="7: 单行" Tag="7"/>
                <ComboBoxItem Content="8: 单词" Tag="8"/>
                <ComboBoxItem Content="9: 单字符" Tag="9"/>
            </ComboBox>
        </StackPanel>
    </local:BaseToolDebugWindow.CustomContent>
</local:BaseToolDebugWindow>

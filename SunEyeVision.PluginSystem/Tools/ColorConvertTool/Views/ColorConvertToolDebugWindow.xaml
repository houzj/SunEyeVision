<local:BaseToolDebugWindow x:Class="SunEyeVision.PluginSystem.Tools.ColorConvertTool.Views.ColorConvertToolDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SunEyeVision.PluginSystem.Base.Windows"
        Title="颜色空间转换工具调试" Height="400" Width="400">
    
    <local:BaseToolDebugWindow.CustomContent>
        <StackPanel Margin="16">
            <!-- 目标颜色空间 -->
            <TextBlock Text="目标颜色空间:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding ColorSpaces}" SelectedItem="{Binding TargetColorSpace}"
                     Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,12"/>

            <!-- GPU加速 -->
            <CheckBox Content="使用GPU加速" IsChecked="{Binding UseGpu}" 
                     FontSize="12" Margin="0,0,0,12"/>
        </StackPanel>
    </local:BaseToolDebugWindow.CustomContent>
</local:BaseToolDebugWindow>

<local:BaseToolDebugWindow x:Class="SunEyeVision.PluginSystem.Tools.ROICropTool.Views.ROICropToolDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SunEyeVision.PluginSystem.Base.Windows"
        Title="ROI裁剪工具调试" Height="500" Width="450">
    
    <local:BaseToolDebugWindow.CustomContent>
        <StackPanel Margin="16">
            <!-- X坐标 -->
            <TextBlock Text="X坐标:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding X}" Minimum="0" Maximum="1000" 
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding X}" FontSize="12" FontWeight="Bold" Margin="8,0,0,0" Width="40"/>
            </StackPanel>

            <!-- Y坐标 -->
            <TextBlock Text="Y坐标:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Y}" Minimum="0" Maximum="1000" 
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Y}" FontSize="12" FontWeight="Bold" Margin="8,0,0,0" Width="40"/>
            </StackPanel>

            <!-- 宽度 -->
            <TextBlock Text="宽度:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Width}" Minimum="1" Maximum="2000" 
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Width}" FontSize="12" FontWeight="Bold" Margin="8,0,0,0" Width="40"/>
            </StackPanel>

            <!-- 高度 -->
            <TextBlock Text="高度:" FontSize="12" Foreground="#666666" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Width="80" 
                         Padding="6" FontSize="12" BorderBrush="#DDDDDD" BorderThickness="1"/>
                <Slider Value="{Binding Height}" Minimum="1" Maximum="2000" 
                        Width="150" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Height}" FontSize="12" FontWeight="Bold" Margin="8,0,0,0" Width="40"/>
            </StackPanel>

            <!-- 归一化 -->
            <CheckBox Content="归一化坐标" IsChecked="{Binding Normalize}" 
                     FontSize="12"/>
        </StackPanel>
    </local:BaseToolDebugWindow.CustomContent>
</local:BaseToolDebugWindow>

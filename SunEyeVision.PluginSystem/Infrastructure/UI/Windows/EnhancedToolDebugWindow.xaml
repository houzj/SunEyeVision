                            <TextBlock Text="å‚æ•°é…ç½®" FontSize="16" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- åŠ¨æ€å‚æ•°æŽ§ä»¶ -->
                        <ItemsControl ItemsSource="{Binding ParameterItems}">
                            <ItemsControl.ItemTemplate>

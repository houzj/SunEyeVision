                        <TextBlock Text="åŠ è½½" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Separator Width="1" Margin="16,4"/>

                <Button Style="{StaticResource SecondaryButton}" Command="{Binding CreateSnapshotCommand}" Margin="4,0">
                    <StackPanel Orientation="Horizontal">

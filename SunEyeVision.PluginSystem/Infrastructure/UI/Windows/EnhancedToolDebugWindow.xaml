                <!-- æ‰§è¡Œç»“æžœåŒº -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="12,8,12,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="ðŸ“Š" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="æ‰§è¡Œç»“æžœ" FontSize="16" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- è¿›åº¦æ¡ -->

                        </TextBlock>
                    </Border>

                    <Border Background="#F5F5F5" CornerRadius="4" Padding="6,3">
                        <TextBlock FontSize="11" Foreground="#666666">
                            <Run Text="FPS: "/>
                            <Run Text="{Binding FPS}" Foreground="#4CAF50" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

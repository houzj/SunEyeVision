                        <TextBlock Text="å¿«ç…§" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- åº•éƒ¨çŠ¶æ€æ  -->
        <Border Grid.Row="4" Background="{StaticResource HeaderBrush}" Padding="12,8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" FontSize="12" Foreground="#333333" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#F5F5F5" CornerRadius="4" Padding="6,3" Margin="0,0,8,0">
                        <TextBlock FontSize="11" Foreground="#666666">
                            <Run Text="æ‰§è¡Œæ—¶é—´: "/>

<UserControl x:Class="SunEyeVision.UI.Controls.WorkflowCanvasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:SunEyeVision.UI.Converters"
             xmlns:controls="clr-namespace:SunEyeVision.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:SmartPathConverter x:Key="SmartPathConverter" ControlOffset="60" GridSize="1" NodeMargin="30"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:PointOffsetConverter x:Key="PointOffsetConverter"/>
        <converters:NodeDisplayTextConverter x:Key="NodeDisplayTextConverter"/>
        <converters:NodeBackgroundColorConverter x:Key="NodeBackgroundColorConverter"/>
        <converters:NodeBorderColorConverter x:Key="NodeBorderColorConverter"/>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

        <!-- 箭头标记 - 尖端指向右侧（0度方向），方便旋转 -->
        <PathGeometry x:Key="ArrowGeometry">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="-8,-5" />
                <LineSegment Point="-8,5" />
                <LineSegment Point="0,0" />
            </PathFigure>
        </PathGeometry>

        <!-- 箭头填充颜色 -->
        <SolidColorBrush x:Key="ArrowBrush" Color="#666666"/>

        <!-- 端口椭圆样式（共享资源） -->
        <Style x:Key="PortEllipseStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="#0066CC"/>
            <Setter Property="Stroke" Value="#FFFFFF"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Cursor" Value="Cross"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="#FF6600"/>
                    <Setter Property="Width" Value="24"/>
                    <Setter Property="Height" Value="24"/>
                    <Setter Property="StrokeThickness" Value="3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 节点背景样式 -->
        <SolidColorBrush x:Key="NodeBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NodeHeaderBackground" Color="#0066CC"/>
        <SolidColorBrush x:Key="NodeFooterBackground" Color="#F0F8FF"/>
        <SolidColorBrush x:Key="NodeTextForeground" Color="#0066CC"/>
        <SolidColorBrush x:Key="NodeTimeForeground" Color="#666666"/>
        <SolidColorBrush x:Key="NodeBorderBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="NodeBorderBrushSelected" Color="#0066CC"/>
    </UserControl.Resources>

    <!-- 主容器 -->
    <Grid x:Name="MainGrid">
        <!-- 原有的 WorkflowCanvas -->
        <Canvas x:Name="WorkflowCanvas"
                ClipToBounds="True"
                AllowDrop="True"
                DragEnter="WorkflowCanvas_DragEnter"
                DragOver="WorkflowCanvas_DragOver"
                DragLeave="WorkflowCanvas_DragLeave"
                Drop="WorkflowCanvas_Drop"
                PreviewMouseLeftButtonDown="WorkflowCanvas_PreviewMouseLeftButtonDown"
                PreviewMouseMove="WorkflowCanvas_PreviewMouseMove"
                PreviewMouseLeftButtonUp="WorkflowCanvas_PreviewMouseLeftButtonUp">

        <!-- 网格背景 -->
        <Canvas.Background>
                    <DrawingBrush ViewportUnits="Absolute" Viewport="0,0,20,20" TileMode="Tile">
                <DrawingBrush.Drawing>
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#E0E0E0" Thickness="0.15"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="0,1" EndPoint="1,1"/>
                                <LineGeometry StartPoint="1,0" EndPoint="1,1"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Canvas.Background>

        <!-- 连接线 - 使用智能直角折线 -->
        <ItemsControl ItemsSource="{Binding WorkflowConnections}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.ZIndex" Value="1000"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <!-- 连接线 -->
                        <Path Data="{Binding Path=., Converter={StaticResource SmartPathConverter}}"
                              Stroke="{Binding StatusColor}" StrokeThickness="2"
                              StrokeLineJoin="Round"
                              Cursor="Hand"
                              Loaded="Path_Loaded"
                              DataContextChanged="Path_DataContextChanged"
                              MouseLeftButtonDown="ConnectionLine_MouseLeftButtonDown">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#666666" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Stroke" Value="#0066CC"/>
                                            <Setter Property="StrokeThickness" Value="3"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#0066CC" BlurRadius="4" ShadowDepth="2" Opacity="0.7"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>

                        <!-- 连接线拐点（中间点）标记 -->
                        <ItemsControl ItemsSource="{Binding PathPoints, Mode=OneWay}"
                                      Visibility="{Binding ShowPathPoints, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Canvas>
                                        <Ellipse Width="8" Height="8"
                                                 Fill="#FF6600"
                                                 Stroke="#FFFFFF"
                                                 StrokeThickness="1"
                                                 Opacity="0.7"
                                                 Canvas.Left="{Binding X, Converter={StaticResource PointOffsetConverter}, ConverterParameter=-4}"
                                                 Canvas.Top="{Binding Y, Converter={StaticResource PointOffsetConverter}, ConverterParameter=-4}"/>
                                    </Canvas>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 箭头 -->
                        <Path Data="{StaticResource ArrowGeometry}"
                              Fill="{Binding StatusColor}"
                              Canvas.Left="{Binding ArrowX}"
                              Canvas.Top="{Binding ArrowY}"
                              RenderTransformOrigin="0,0"
                              Loaded="ArrowPath_Loaded"
                              x:Name="ArrowPath">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Transmitting">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       From="1" To="0.3" Duration="0:0:0.5"
                                                                       AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 节点 -->
        <ItemsControl ItemsSource="{Binding WorkflowNodes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.Left" Value="{Binding Position.X, Mode=TwoWay}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Position.Y, Mode=TwoWay}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="160" Height="40"
                            Background="{Binding Converter={StaticResource NodeBackgroundColorConverter}}"
                            CornerRadius="20"
                            BorderThickness="2"
                            BorderBrush="{Binding Converter={StaticResource NodeBorderColorConverter}}"
                            MouseLeftButtonDown="Node_MouseLeftButtonDown"
                            MouseLeftButtonUp="Node_MouseLeftButtonUp"
                            MouseMove="Node_MouseMove"
                            Tag="{Binding}"
                            MouseEnter="Node_MouseEnter"
                            MouseLeave="Node_MouseLeave"
                            x:Name="NodeBorder">
                        <Grid>
                            <!-- 节点内容 -->
                            <Grid Margin="12,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 节点类型图标 -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding NodeTypeIcon}"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                                <!-- 全局序号 -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding GlobalIndex, StringFormat='#{0}'}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#ff9500"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                                <!-- 节点名称 + 本地序号（使用适配器） -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Converter={StaticResource NodeDisplayTextConverter}}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333333"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </Grid>

                            <!-- 连接点 - 上 -->
                            <Ellipse Name="TopPortEllipse"
                                     Style="{StaticResource PortEllipseStyle}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Top"
                                     Margin="0,-10,0,0"
                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                     MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                     MouseMove="Port_MouseMove"
                                     MouseEnter="Port_MouseEnter"
                                     MouseLeave="Port_MouseLeave"
                                     Tag="TopPort"
                                     Visibility="Collapsed"/>

                            <!-- 连接点 - 下 -->
                            <Ellipse Name="BottomPortEllipse"
                                     Style="{StaticResource PortEllipseStyle}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Bottom"
                                     Margin="0,0,0,-10"
                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                     MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                     MouseMove="Port_MouseMove"
                                     MouseEnter="Port_MouseEnter"
                                     MouseLeave="Port_MouseLeave"
                                     Tag="BottomPort"
                                     Visibility="Collapsed"/>

                            <!-- 连接点 - 左 -->
                            <Ellipse Name="LeftPortEllipse"
                                     Style="{StaticResource PortEllipseStyle}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="-10,0,0,0"
                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                     MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                     MouseMove="Port_MouseMove"
                                     MouseEnter="Port_MouseEnter"
                                     MouseLeave="Port_MouseLeave"
                                     Tag="LeftPort"
                                     Visibility="Collapsed"/>

                            <!-- 连接点 - 右 -->
                            <Ellipse Name="RightPortEllipse"
                                     Style="{StaticResource PortEllipseStyle}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"
                                     Margin="0,0,-10,0"
                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                     MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                     MouseMove="Port_MouseMove"
                                     MouseEnter="Port_MouseEnter"
                                     MouseLeave="Port_MouseLeave"
                                     Tag="RightPort"
                                     Visibility="Collapsed"/>
                        </Grid>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="BorderBrush" Value="#ff6600"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#ff6600" BlurRadius="10" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#ff7700"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#ff7700" BlurRadius="8" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 拖拽连接时的临时连接线 -->
        <Path x:Name="TempConnectionLine"
              Stroke="#FF6600"
              StrokeThickness="2"
              StrokeDashArray="5,5"
              StrokeLineJoin="Round"
              Fill="Transparent"
              Canvas.ZIndex="-1"
              IsHitTestVisible="False"
              Visibility="Collapsed">
            <Path.Data>
                <PathGeometry x:Name="TempConnectionGeometry" />
            </Path.Data>
        </Path>

        <!-- 框选控件 -->
        <controls:SelectionBox x:Name="SelectionBox" Canvas.ZIndex="9999"/>

        <!-- 最大外接矩形（用于调试） -->
        <Border x:Name="BoundingRectangle"
                 BorderBrush="#FF0000"
                 BorderThickness="3"
                 Background="Red"
                 CornerRadius="2"
                 Opacity="0.5"
                 Canvas.ZIndex="500"
                 Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="#FF0000" BlurRadius="8" ShadowDepth="3" Opacity="0.8"/>
            </Border.Effect>
        </Border>
    </Canvas>
    </Grid>
</UserControl>

<UserControl x:Class="SunEyeVision.UI.Controls.WorkflowCanvasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:SunEyeVision.UI.Converters"
             xmlns:controls="clr-namespace:SunEyeVision.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:SmartPathConverter x:Key="SmartPathConverter" ControlOffset="60" GridSize="1" NodeMargin="30"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:PointOffsetConverter x:Key="PointOffsetConverter"/>

        <!-- ç®­å¤´æ ‡è®° - å°–ç«¯æŒ‡å‘å³ä¾§ï¼ˆ0åº¦æ–¹å‘ï¼‰ï¼Œæ–¹ä¾¿æ—‹è½¬ -->
        <PathGeometry x:Key="ArrowGeometry">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="-8,-5" />
                <LineSegment Point="-8,5" />
                <LineSegment Point="0,0" />
            </PathFigure>
        </PathGeometry>

        <!-- ç®­å¤´å¡«å……é¢œè‰² -->
        <SolidColorBrush x:Key="ArrowBrush" Color="#666666"/>
    </UserControl.Resources>

    <!-- å·¥ä½œæµç”»å¸ƒ -->
    <Canvas x:Name="WorkflowCanvas"
            ClipToBounds="True"
            AllowDrop="True"
            DragEnter="WorkflowCanvas_DragEnter"
            DragOver="WorkflowCanvas_DragOver"
            DragLeave="WorkflowCanvas_DragLeave"
            Drop="WorkflowCanvas_Drop"
            PreviewMouseLeftButtonDown="WorkflowCanvas_PreviewMouseLeftButtonDown"
            PreviewMouseMove="WorkflowCanvas_PreviewMouseMove"
            PreviewMouseLeftButtonUp="WorkflowCanvas_PreviewMouseLeftButtonUp">

        <!-- ç½‘æ ¼èƒŒæ™¯ -->
        <Canvas.Background>
                    <DrawingBrush ViewportUnits="Absolute" Viewport="0,0,1,1" TileMode="Tile">
                <DrawingBrush.Drawing>
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#E0E0E0" Thickness="0.5"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="0,1" EndPoint="1,1"/>
                                <LineGeometry StartPoint="1,0" EndPoint="1,1"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Canvas.Background>

        <!-- è¿žæŽ¥çº¿ - ä½¿ç”¨æ™ºèƒ½ç›´è§’æŠ˜çº¿ -->
        <ItemsControl ItemsSource="{Binding WorkflowConnections}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.ZIndex" Value="1000"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <!-- è¿žæŽ¥çº¿ -->
                        <Path Data="{Binding Path=., Converter={StaticResource SmartPathConverter}}"
                              Stroke="{Binding StatusColor}" StrokeThickness="2"
                              StrokeLineJoin="Round"
                              Cursor="Hand"
                              Loaded="Path_Loaded"
                              DataContextChanged="Path_DataContextChanged"
                              MouseLeftButtonDown="ConnectionLine_MouseLeftButtonDown">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#666666" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Stroke" Value="#0066CC"/>
                                            <Setter Property="StrokeThickness" Value="3"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#0066CC" BlurRadius="4" ShadowDepth="2" Opacity="0.7"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>

                        <!-- è¿žæŽ¥çº¿æ‹ç‚¹ï¼ˆä¸­é—´ç‚¹ï¼‰æ ‡è®° -->
                        <ItemsControl ItemsSource="{Binding PathPoints, Mode=OneWay}"
                                      Visibility="{Binding ShowPathPoints, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Canvas>
                                        <Ellipse Width="8" Height="8"
                                                 Fill="#FF6600"
                                                 Stroke="#FFFFFF"
                                                 StrokeThickness="1"
                                                 Opacity="0.7"
                                                 Canvas.Left="{Binding X, Converter={StaticResource PointOffsetConverter}, ConverterParameter=-4}"
                                                 Canvas.Top="{Binding Y, Converter={StaticResource PointOffsetConverter}, ConverterParameter=-4}"/>
                                    </Canvas>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- ç®­å¤´ -->
                        <Path Data="{StaticResource ArrowGeometry}"
                              Fill="{Binding StatusColor}"
                              Canvas.Left="{Binding ArrowX}"
                              Canvas.Top="{Binding ArrowY}"
                              RenderTransformOrigin="0,0"
                              Loaded="ArrowPath_Loaded"
                              x:Name="ArrowPath">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Transmitting">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       From="1" To="0.3" Duration="0:0:0.5"
                                                                       AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- èŠ‚ç‚¹ -->
        <ItemsControl ItemsSource="{Binding WorkflowNodes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.Left" Value="{Binding Position.X, Mode=TwoWay}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Position.Y, Mode=TwoWay}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="140" Height="90"
                            Background="#FFFFFF" CornerRadius="4"
                            MouseLeftButtonDown="Node_MouseLeftButtonDown"
                            MouseLeftButtonUp="Node_MouseLeftButtonUp"
                            MouseMove="Node_MouseMove"
                            Tag="{Binding}"
                            MouseEnter="Node_MouseEnter"
                            MouseLeave="Node_MouseLeave"
                            x:Name="NodeBorder">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#0066CC" Padding="6" CornerRadius="3,3,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”§" FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" Margin="6,0,0,0" FontWeight="Bold" FontSize="12" Foreground="White"/>
                                </StackPanel>
                            </Border>
                            <TextBlock Grid.Row="1" Text="{Binding AlgorithmType}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="#0066CC"/>
                            <Border Grid.Row="2" Background="#F0F8FF" Padding="4" CornerRadius="0,0,3,3">
                                <TextBlock Text="â±ï¸ 0ms" HorizontalAlignment="Center" FontSize="10" Foreground="#666666"/>
                            </Border>

                            <!-- è¿žæŽ¥ç‚¹ - ä¸Šæ–¹ -->
                            <Ellipse Grid.RowSpan="3"
                                     HorizontalAlignment="Center" VerticalAlignment="Top"
                                     Cursor="Cross" Panel.ZIndex="10"
                                     PreviewMouseLeftButtonDown="Port_PreviewMouseLeftButtonDown"
                                     PreviewMouseLeftButtonUp="Port_PreviewMouseLeftButtonUp"
                                     Tag="{Binding}"
                                     MouseEnter="Ellipse_MouseEnter"
                                     MouseLeave="Ellipse_MouseLeave"
                                     x:Name="TopPortEllipse"
                                     Visibility="Collapsed">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#0066CC"/>
                                        <Setter Property="Stroke" Value="#FFFFFF"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Width" Value="14"/>
                                        <Setter Property="Height" Value="14"/>
                                        <Setter Property="Margin" Value="0,-7,0,0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" Value="#FF6600"/>
                                                <Setter Property="Width" Value="18"/>
                                                <Setter Property="Height" Value="18"/>
                                                <Setter Property="Margin" Value="0,-9,0,0"/>
                                                <Setter Property="StrokeThickness" Value="3"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#FF6600" BlurRadius="8" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!-- è¿žæŽ¥ç‚¹ - ä¸‹æ–¹ -->
                            <Ellipse Grid.RowSpan="3"
                                     HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                     Cursor="Cross" Panel.ZIndex="10"
                                     PreviewMouseLeftButtonDown="Port_PreviewMouseLeftButtonDown"
                                     PreviewMouseLeftButtonUp="Port_PreviewMouseLeftButtonUp"
                                     Tag="{Binding}"
                                     MouseEnter="Ellipse_MouseEnter"
                                     MouseLeave="Ellipse_MouseLeave"
                                     x:Name="BottomPortEllipse"
                                     Visibility="Collapsed">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#0066CC"/>
                                        <Setter Property="Stroke" Value="#FFFFFF"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Width" Value="14"/>
                                        <Setter Property="Height" Value="14"/>
                                        <Setter Property="Margin" Value="0,0,0,-7"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" Value="#FF6600"/>
                                                <Setter Property="Width" Value="18"/>
                                                <Setter Property="Height" Value="18"/>
                                                <Setter Property="Margin" Value="0,0,0,-9"/>
                                                <Setter Property="StrokeThickness" Value="3"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#FF6600" BlurRadius="8" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!-- è¿žæŽ¥ç‚¹ - å·¦ä¾§ -->
                            <Ellipse Grid.RowSpan="3"
                                     HorizontalAlignment="Left" VerticalAlignment="Center"
                                     Cursor="Cross" Panel.ZIndex="10"
                                     PreviewMouseLeftButtonDown="Port_PreviewMouseLeftButtonDown"
                                     PreviewMouseLeftButtonUp="Port_PreviewMouseLeftButtonUp"
                                     Tag="{Binding}"
                                     MouseEnter="Ellipse_MouseEnter"
                                     MouseLeave="Ellipse_MouseLeave"
                                     x:Name="LeftPortEllipse"
                                     Visibility="Collapsed">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#0066CC"/>
                                        <Setter Property="Stroke" Value="#FFFFFF"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Width" Value="14"/>
                                        <Setter Property="Height" Value="14"/>
                                        <Setter Property="Margin" Value="-7,0,0,0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" Value="#FF6600"/>
                                                <Setter Property="Width" Value="18"/>
                                                <Setter Property="Height" Value="18"/>
                                                <Setter Property="Margin" Value="-9,0,0,0"/>
                                                <Setter Property="StrokeThickness" Value="3"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#FF6600" BlurRadius="8" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!-- è¿žæŽ¥ç‚¹ - å³ä¾§ -->
                            <Ellipse Grid.RowSpan="3"
                                     HorizontalAlignment="Right" VerticalAlignment="Center"
                                     Cursor="Cross" Panel.ZIndex="10"
                                     PreviewMouseLeftButtonDown="Port_PreviewMouseLeftButtonDown"
                                     PreviewMouseLeftButtonUp="Port_PreviewMouseLeftButtonUp"
                                     Tag="{Binding}"
                                     MouseEnter="Ellipse_MouseEnter"
                                     MouseLeave="Ellipse_MouseLeave"
                                     x:Name="RightPortEllipse"
                                     Visibility="Collapsed">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#0066CC"/>
                                        <Setter Property="Stroke" Value="#FFFFFF"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Width" Value="14"/>
                                        <Setter Property="Height" Value="14"/>
                                        <Setter Property="Margin" Value="0,0,-7,0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" Value="#FF6600"/>
                                                <Setter Property="Width" Value="18"/>
                                                <Setter Property="Height" Value="18"/>
                                                <Setter Property="Margin" Value="0,0,-9,0"/>
                                                <Setter Property="StrokeThickness" Value="3"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#FF6600" BlurRadius="8" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Grid>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="BorderBrush" Value="#0066CC"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#0066CC" BlurRadius="10" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#667EEA"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#667EEA" BlurRadius="8" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- æ‹–æ‹½è¿žæŽ¥æ—¶çš„ä¸´æ—¶è¿žæŽ¥çº¿ -->
        <Path x:Name="TempConnectionLine"
              Stroke="#FF6600"
              StrokeThickness="2"
              StrokeDashArray="5,5"
              StrokeLineJoin="Round"
              Fill="Transparent"
              Canvas.ZIndex="9998"
              Visibility="Collapsed">
            <Path.Data>
                <PathGeometry x:Name="TempConnectionGeometry" />
            </Path.Data>
        </Path>

        <!-- æ¡†é€‰æŽ§ä»¶ -->
        <controls:SelectionBox x:Name="SelectionBox" Canvas.ZIndex="9999"/>

        <!-- æœ€å¤§å¤–æŽ¥çŸ©å½¢ï¼ˆç”¨äºŽè°ƒè¯•ï¼‰ -->
        <Border x:Name="BoundingRectangle"
                 BorderBrush="#FF0000"
                 BorderThickness="3"
                 Background="Red"
                 CornerRadius="2"
                 Opacity="0.5"
                 Canvas.ZIndex="500"
                 Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="#FF0000" BlurRadius="8" ShadowDepth="3" Opacity="0.8"/>
            </Border.Effect>
        </Border>
    </Canvas>
</UserControl>

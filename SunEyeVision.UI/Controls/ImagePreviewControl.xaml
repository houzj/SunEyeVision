                            Margin="6,0,0,0"
                            ToolTip="åˆ é™¤é€‰ä¸­"/>

                    <!-- æ¸…é™¤å…¨éƒ¨ -->
                    <Button Content="ðŸ§¹"
                            Command="{Binding ClearAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            Margin="6,0,0,0"
                            ToolTip="æ¸…é™¤å…¨éƒ¨"/>

                    <!-- åˆ†éš”çº¿ -->
                    <Border Width="1"
                            Background="#555555"
                            Margin="12,6,12,6"
                            VerticalAlignment="Stretch"/>

                    <!-- è¿è¡Œå…¨éƒ¨ -->
                    <Button Content="â–¶ï¸"
                            Command="{Binding RunAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            ToolTip="è¿è¡Œå…¨éƒ¨"/>

                    <!-- è‡ªåŠ¨åˆ‡æ¢ -->
                    <ToggleButton Content="ðŸ”„"
                                   IsChecked="{Binding AutoSwitchEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"

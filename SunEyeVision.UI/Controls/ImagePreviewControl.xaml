                            Style="{StaticResource IconButton}"
                            ToolTip="æ·»åŠ å›¾ç‰‡"/>

                    <!-- æ·»åŠ æ–‡ä»¶å¤¹ -->
                    <Button Content="ðŸ“"
                            Command="{Binding AddFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            Margin="6,0,0,0"
                            ToolTip="æ·»åŠ æ–‡ä»¶å¤¹"/>

                    <!-- åˆ é™¤é€‰ä¸­ -->
                    <Button Content="ðŸ—‘ï¸"

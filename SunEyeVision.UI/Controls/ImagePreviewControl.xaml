                                   Margin="6,0,0,0"
                                   ToolTip="è‡ªåŠ¨åˆ‡æ¢"/>
                </StackPanel>
            </Grid>

            <!-- å›¾åƒç¼©ç•¥å›¾åˆ—è¡¨ -->
            <ScrollViewer Grid.Row="2"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ImageCollection, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{Binding IsSelected, Converter={StaticResource ThumbnailStyleConverter}}"
                                    MouseLeftButtonDown="OnThumbnailClick"
                                    Tag="{Binding}">
                                <StackPanel>
                                    <!-- ç¼©ç•¥å›¾ -->
                                    <Border Background="#1A1A1A"
                                            CornerRadius="2"
                                            Padding="2"
                                            HorizontalAlignment="Center">
                                        <Image Source="{Binding Thumbnail}"
                                               Width="100"
                                               Height="100"
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.ToolTip>
                                                <TextBlock Text="{Binding Name}" FontSize="11"/>
                                            </Image.ToolTip>
                                        </Image>
                                    </Border>
                                    <!-- åºå· -->
                                    <TextBlock Text="{Binding DisplayIndex}"
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>

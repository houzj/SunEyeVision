<UserControl x:Class="SunEyeVision.UI.Controls.ImagePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SunEyeVision.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="140" d:DesignWidth="500">

    <UserControl.Resources>
        <!-- æ ·å¼è½¬æ¢å™¨ -->
        <local:ThumbnailStyleConverter x:Key="ThumbnailStyleConverter"/>

        <!-- å›¾æ ‡æŒ‰é’®æ ·å¼ -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                Width="36"
                                Height="36">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- åˆ‡æ¢æŒ‰é’®æ ·å¼ -->
        <Style x:Key="IconToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                Width="36"
                                Height="36">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#45A049"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </UserControl.Resources>

    <!-- ä¸»å®¹å™¨ -->
    <Border Background="#333333" BorderBrush="#444444" BorderThickness="1" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- é¡¶éƒ¨å·¥å…·æ  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- æ ‡é¢˜ -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ImageCountDisplay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="12"
                           Foreground="#E0E0E0"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- æŒ‰é’®ç»„å®¹å™¨ -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- æ·»åŠ å›¾ç‰‡ -->
                    <Button Content="âž•"

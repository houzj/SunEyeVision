<UserControl x:Class="SunEyeVision.UI.Controls.ImagePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SunEyeVision.UI.Controls"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="140" d:DesignWidth="500">

    <UserControl.Resources>
        <!-- Ê†∑ÂºèËΩ¨Êç¢Âô® -->
        <local:ThumbnailStyleConverter x:Key="ThumbnailStyleConverter"/>
        <local:ImageRunModeDisplayConverter x:Key="ImageRunModeDisplayConverter"/>
        <local:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        <local:NullToOpacityConverter x:Key="NullToOpacityConverter"/>

        <!-- ÂõæÊ†áÊåâÈíÆÊ†∑Âºè -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                Width="36"
                                Height="36">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- ÂàáÊç¢ÊåâÈíÆÊ†∑Âºè -->
        <Style x:Key="IconToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                Width="36"
                                Height="36">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#45A049"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- ÂºÄÂÖ≥ÊåâÈíÆÊ†∑Âºè -->
        <Style x:Key="SwitchToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="BackgroundBorder"
                                Background="#555555"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="1"
                                Width="42"
                                Height="22">
                            <Rectangle x:Name="SwitchEllipse"
                                             Width="20"
                                             Height="22"
                                             Fill="White"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center"/>
                         </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="Orange"/>
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="Orange"/>
                                <Setter TargetName="SwitchEllipse" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>


        <!-- ËøêË°åÊ®°ÂºèÈÄâÊã©ÊåâÈíÆÊ†∑ÂºèÔºàËá™ÂÆö‰πâButton + PopupÔºâ -->
        <Style x:Key="RunModeSelectButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- ‰∏ªÊåâÈíÆÂå∫Âüü -->
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="#555555"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,0"
                                    Width="100"
                                    Height="36">
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="0,0,4,0"/>
                            </Border>
                                                <!-- ËøêË°åÊ®°Âºè‰∏ãÊãâPopup -->
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ‰∏ãÊãâÂàóË°®È°πÊ†∑Âºè -->
        <Style x:Key="RunModeListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                Padding="8,4"
                                BorderThickness="0"
                                CornerRadius="2">
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- ËøêË°åÊ®°ÂºèÊûö‰∏æÂÄºÊï∞ÁªÑ -->
        <x:Array x:Key="ImageRunModeValues" Type="{x:Type local:ImageRunMode}">
            <local:ImageRunMode>ËøêË°åÂÖ®ÈÉ®</local:ImageRunMode>
            <local:ImageRunMode>ËøêË°åÈÄâÊã©</local:ImageRunMode>
        </x:Array>

        <!-- ÂèçÂêëÂ∏ÉÂ∞îËΩ¨Êç¢Âô® -->
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- Á™ÑÊªöÂä®Êù°Ê®°Êùø -->
        <ControlTemplate x:Key="ThinScrollViewerTemplate" TargetType="ScrollViewer">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                <ScrollBar x:Name="PART_HorizontalScrollBar"
                           Grid.Column="0" Grid.Row="1"
                           Orientation="Horizontal"
                           Height="3"
                           Maximum="{TemplateBinding ScrollableWidth}"
                           ViewportSize="{TemplateBinding ViewportWidth}"
                           Value="{TemplateBinding HorizontalOffset}"
                           Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}">
                    <ScrollBar.Template>
                        <ControlTemplate TargetType="ScrollBar">
                            <!-- Â§ñÂ±ÇÈÄèÊòéÂëΩ‰∏≠Âå∫ÂüüÔºà15pxÈ´òÔºâ -->
                            <Grid Height="15" Background="Transparent">
                                <!-- ÂÜÖÂ±ÇËßÜËßâÊªöÂä®Êù°Ôºà3pxÈ´òÔºåÂûÇÁõ¥Â±Ö‰∏≠Ôºâ -->
                                <Border Height="3"
                                        VerticalAlignment="Center"
                                        Background="#1A1A1A"
                                        CornerRadius="1.5">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000"
                                                          Opacity="0.3"
                                                          BlurRadius="2"
                                                          ShadowDepth="0"/>
                                    </Border.Effect>
                                </Border>
                                <!-- TrackÂ±Ç - Êâ©Â§ßÂëΩ‰∏≠Âå∫Âüü -->
                                <Track x:Name="PART_Track" IsDirectionReversed="False">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Grid Background="Transparent">
                                                        <!-- Â§ñÂ±ÇÈÄèÊòéÂëΩ‰∏≠Âå∫ÂüüÔºà15pxÔºâ -->
                                                        <Border Background="Transparent"
                                                                Height="15"/>
                                                        <!-- ÂÜÖÂ±ÇËßÜËßâThumbÔºà3pxÔºåÂûÇÁõ¥Â±Ö‰∏≠Ôºâ -->
                                                        <Border x:Name="ThumbBorder"
                                                                Background="#555555"
                                                                Height="3"
                                                                VerticalAlignment="Center"
                                                                CornerRadius="1.5"
                                                                Cursor="Hand">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#FFFFFF"
                                                                                  Opacity="0.2"
                                                                                  BlurRadius="2"
                                                                                  ShadowDepth="0"/>
                                                            </Border.Effect>
                                                        </Border>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <!-- Èº†Ê†áÊÇ¨ÂÅúÊó∂È´ò‰∫ÆThumb -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="#888888"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </ScrollBar.Template>
                </ScrollBar>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>

    <!-- ‰∏ªÂÆπÂô® -->
    <Border Background="#333333" BorderBrush="#444444" BorderThickness="1" CornerRadius="6" Padding="2"
            HorizontalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- È°∂ÈÉ®Â∑•ÂÖ∑Ê†è -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ê†áÈ¢ò -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ImageCountDisplay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="12"
                           Foreground="#E0E0E0"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- ÊåâÈíÆÁªÑÂÆπÂô® -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <!-- ËøêË°åÊ®°ÂºèÈÄâÊã© -->
                    <Button x:Name="RunModeButton"
                            Content="{Binding ImageRunMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ImageRunModeDisplayConverter}}"
                            Style="{StaticResource RunModeSelectButton}"
                            ToolTip="ÈÄâÊã©ËøêË°åÊ®°Âºè"
                            Click="OnRunModeButtonClick"/>
                    <Popup x:Name="RunModePopup"
                           Placement="Bottom"
                           PlacementTarget="{Binding ElementName=RunModeButton}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide"
                           StaysOpen="False">
                        <Border Background="#2D2D2D"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="4"
                                MaxHeight="150"
                                MinWidth="100">
                            <ListBox x:Name="RunModeListBox"
                                     ItemsSource="{Binding Source={StaticResource ImageRunModeValues}}"
                                     SelectedItem="{Binding ImageRunMode, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                     ItemContainerStyle="{StaticResource RunModeListBoxItem}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     PreviewMouseDown="OnRunModeListBoxPreviewMouseDown">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ., Converter={StaticResource ImageRunModeDisplayConverter}}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </Popup>

                    <!-- Ëá™Âä®ÂàáÊç¢Ê†áÁ≠æ -->
                    <TextBlock Text="Ëá™Âä®ÂàáÊç¢"
                               FontSize="11"
                               Foreground="#E0E0E0"
                               VerticalAlignment="Center"
                               Margin="6,0,6,0"/>

                    <!-- Ëá™Âä®ÂàáÊç¢ÂºÄÂÖ≥ -->
                    <ToggleButton x:Name="AutoSwitchToggle"
                                   IsChecked="{Binding AutoSwitchEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Style="{StaticResource SwitchToggleButton}"
                                   Margin="0,0,0,0"
                                   ToolTip="Ëá™Âä®ÂàáÊç¢"/>
                    <!-- ÂàÜÈöîÁ∫ø -->
                    <Border Width="1"
                            Background="#555555"
                            Margin="12,6,12,6"
                            VerticalAlignment="Stretch"/>
                    <!-- Ê∑ªÂä†ÂõæÁâá -->
                    <Button Content="‚ûï"
                            Command="{Binding AddImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            ToolTip="Ê∑ªÂä†ÂõæÁâá"/>

                    <!-- Ê∑ªÂä†Êñá‰ª∂Â§π -->
                    <Button Content="üìÅ"
                            Command="{Binding AddFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            Margin="6,0,0,0"
                            ToolTip="Ê∑ªÂä†Êñá‰ª∂Â§π"/>

                    <!-- Ê∏ÖÈô§ÂÖ®ÈÉ® -->
                    <Button Content="üßπ"
                            Command="{Binding ClearAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource IconButton}"
                            Margin="6,0,0,0"
                            ToolTip="Ê∏ÖÈô§ÂÖ®ÈÉ®"/>



                </StackPanel>
            </Grid>

            <!-- ÂõæÂÉèÁº©Áï•ÂõæÂàóË°® -->
            <ListBox x:Name="ThumbnailListBox"
                     Grid.Row="2"
                     ItemsSource="{Binding ImageCollection, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="False"
                     SelectionChanged="OnThumbnailListBoxSelectionChanged">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{Binding IsSelected, Converter={StaticResource ThumbnailStyleConverter}}"
                                MouseLeftButtonDown="OnThumbnailClick"
                                Tag="{Binding}"
                                Width="90"
                                Height="90"
                                Margin="1">
                            <!-- Ê∑ªÂä† Grid Áî®‰∫éÂ±ÇÂè†Â∏ÉÂ±Ä -->
                            <Grid>
                                <Border Background="#1A1A1A"
                                        CornerRadius="2"
                                        Padding="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <!-- Áº©Áï•ÂõæÂç†‰ΩçÁ¨¶ÔºàÊú™Âä†ËΩΩÊó∂ÊòæÁ§∫Ôºâ -->
                                    <Grid>
                                        <Image Source="{Binding Thumbnail}"
                                               Width="80"
                                               Height="80"
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               ToolTip="{Binding Name}"/>
                                        <!-- Âä†ËΩΩ‰∏≠ÊèêÁ§∫ÔºàÈùôÊÄÅÂç†‰ΩçÁ¨¶ÔºåÁßªÈô§Âä®ÁîªÔºâ -->
                                        <Border Background="#252525" CornerRadius="2"
                                                Opacity="{Binding Thumbnail, Converter={StaticResource NullToOpacityConverter}}"
                                                Width="80" Height="80"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="..."
                                                       FontSize="16"
                                                       Foreground="#666666"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Âè≥‰∏äËßíÂà†Èô§ÊåâÈíÆ -->
                                <Button Command="{Binding DeleteSingleImageCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Width="20"
                                        Height="20"
                                        Padding="0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,2,2,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Âà†Èô§Ê≠§ÂõæÂÉè"
                                        PreviewMouseLeftButtonDown="OnDeleteButtonPreview">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="#CC0000"
                                                    CornerRadius="10"
                                                    Width="20"
                                                    Height="20">
                                                <TextBlock Text="‚úï"
                                                           FontSize="12"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FF0000"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#FF0000" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <!-- Âè™Âú®Èº†Ê†áÊÇ¨ÂÅúÊó∂ÊòæÁ§∫ -->
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                            Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Â∑¶‰∏äËßíÈÄâÊã©Ê°ÜÔºà‰ªÖÂú®"ËøêË°åÈÄâÊã©"Ê®°Âºè‰∏îIsForRun‰∏∫trueÊó∂ÊòæÁ§∫Ôºâ -->
                                <Border BorderBrush="#4CAF50"
                                        BorderThickness="2"
                                        CornerRadius="2"
                                        Background="#334CAF50"
                                        Width="16"
                                        Height="16"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="2,2,0,0"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <!-- ËøêË°åÊ®°Âºè‰∏∫"ËøêË°åÈÄâÊã©"‰∏îIsForRun‰∏∫trueÊó∂ÊòæÁ§∫ -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ImageRunMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  Value="ËøêË°åÈÄâÊã©"/>
                                                        <Condition Binding="{Binding IsForRun}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="‚úì"
                                               FontSize="10"
                                               Foreground="#4CAF50"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Border>
</UserControl>

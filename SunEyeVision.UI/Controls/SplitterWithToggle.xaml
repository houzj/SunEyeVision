<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SunEyeVision.UI.Controls">

    <Style TargetType="{x:Type local:SplitterWithToggle}" BasedOn="{StaticResource {x:Type GridSplitter}}">
        <Setter Property="Background" Value="#DDDDDD"/>
        <Setter Property="ShowsPreview" Value="False"/>
        <Setter Property="ResizeBehavior" Value="PreviousAndNext"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:SplitterWithToggle}">
                        <Grid Background="{TemplateBinding Background}">
                            <!-- 透明覆盖层用于拖拽 - 放在底层 -->
                            <Border Background="Transparent"
                                    x:Name="PART_SplitterBackground"
                                    IsHitTestVisible="True"
                                    Panel.ZIndex="0"/>

                            <!-- 折叠/展开按钮 (zIndex更高,确保始终在最上层) -->
                            <Button x:Name="PART_ToggleButton"
                                    Width="16"
                                    Height="16"
                                    Padding="0"
                                    Background="#DDDDDD"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    ToolTip="点击折叠/展开"
                                    Panel.ZIndex="100"
                                    ClickMode="Press"
                                    IsHitTestVisible="True"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center">
                                <ContentPresenter/>
                            </Button>
                        </Grid>

                    <ControlTemplate.Triggers>
                        <!-- 垂直方向: 按钮在顶部中间,确保始终可见 -->
                        <Trigger Property="ResizeDirection" Value="Columns">
                            <Setter TargetName="PART_ToggleButton" Property="HorizontalAlignment" Value="Center"/>
                            <Setter TargetName="PART_ToggleButton" Property="VerticalAlignment" Value="Top"/>
                            <Setter TargetName="PART_ToggleButton" Property="Margin" Value="0,4,0,0"/>
                        </Trigger>

                        <!-- 水平方向: 按钮在左侧中间,确保始终可见 -->
                        <Trigger Property="ResizeDirection" Value="Rows">
                            <Setter TargetName="PART_ToggleButton" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="PART_ToggleButton" Property="VerticalAlignment" Value="Center"/>
                            <Setter TargetName="PART_ToggleButton" Property="Margin" Value="4,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
